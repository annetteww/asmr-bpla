<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="курсач.ImageViewPage">
    <StackLayout Padding="20">
        <Image x:Name="imageView" Aspect="AspectFit" Opacity="1" WidthRequest="300" HeightRequest="300" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
            <Button Text="Назад" Clicked="OnBackClicked" />
            <Button Text="Поделиться" Clicked="OnShareClicked" Margin="10,0,0,0" />
        </StackLayout>
    </StackLayout>
</ContentPage>